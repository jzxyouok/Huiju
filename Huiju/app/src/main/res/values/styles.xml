<resources>

    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>


    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorPrimaryDark">@color/night_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/night_primary</item>
        <item name="android:statusBarColor">@color/night_primary</item>
    </style>


</resources>
